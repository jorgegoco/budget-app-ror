 <div>
    <% @groups.each do |group| %>
      <%= link_to group_operations_path(group.id) do %>
        <div>
          <img src=<%= group.icon %> alt=<%= group.name %>>
          <h2><%= group.name %></h2>
          <p>Total spent:$<span><%= group.total_spent %></span></p>
        </div>
      <% end %>
    <% end %>
  </div>
  <div>
    <%= link_to new_group_path do %>
      <button>Add new Category</button>
    <% end %>
  </div>